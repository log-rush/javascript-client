{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["DOM", "ES2015"],
    "module": "ES6",
    "rootDir": "./src",
    "baseUrl": "./src",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist/browser",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "skipLibCheck": true
  }
}
