{
  "compilerOptions": {
    "//": "only dev config",
    "noEmit": true,
    "target": "ES6",
    "lib": ["DOM", "ES2015"],
    "module": "CommonJS",
    "rootDir": "./src",
    "baseUrl": "./src",
    "types": ["node", "isomorphic-fetch"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "skipLibCheck": true
  }
}
